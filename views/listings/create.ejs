<% layout('/layouts/boilerplate') -%>

<div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Add new listing</h3>

    <form method="POST" action="/listings" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="title" placeholder="Enter title" class="form-control" required>
            <div class="valid-feedback">Nice title!</div>
            <div class="invalid-feedback">Enter Good title</div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="description"class="form-control" required></textarea>
            <div class="invalid-feedback">Add short description</div>

        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Image URL</label>
            <input name="image"class="form-control" >
        

        </div>

        <div class="row">
            
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="price" placeholder="â‚¹" class="form-control" required>
                <div class="invalid-feedback">Enter valid price</div>

            </div>
    
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="country" placeholder="Add country" class="form-control" required>
                <div class="invalid-feedback">Enter valid country</div>
                
            </div>
        </div>
        <div class="mb-3 col-md-4">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="location" placeholder="Add location" class="form-control" required>
            <div class="invalid-feedback">Enter valid location</div>

        </div>

        <button class="btn btn-dark mt-3">Add</button>
    </form>
</div>
</div>

