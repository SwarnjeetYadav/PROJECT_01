<% layout('/layouts/boilerplate') -%>

    <h3>All Listings</h3>
  

    <p><i>Total records:<%= allListings.length %></i></p>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListings){ %>
        <a class="listing-link" href="/listings/<%= listing._id %>">
        <div class="card col">

            <% if (listing.image && listing.image.url) { %>
                <img src="<%= listing.image.url %>" class="card-img-top" style="height: 20rem;" alt="listings image">
            <% } else { %>
                <img src="https://images.unsplash.com/photo-1716872491847-03c73619a25d?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top" alt="default image">
            <% } %>

            <div class="card-img-overlay">Lux</div>

            <!-- <img src="<%= listing.image.url%>" class="card-img-top" alt="listings image"> -->
            <div class="card-body">
              <p class="card-text"><b><%= listing.title %></b><br>
              â‚¹<%=listing.price.toLocaleString('en-IN')%>/night</p>
            </div>
        </div>
        </a>
    <%}%>

    </div>


